@* General Ledger Report *@
@{
    RenderFragment RenderGeneralLedger() => __builder =>
    {
        if (generalLedgerReport == null) return;
        
        @foreach (var account in generalLedgerReport.Accounts)
        {
            <Card Title="@($"{account.AccountNumber} - {account.AccountName}")" CssClass="mb-4">
                <HeaderContent>
                    <span class="badge badge-info">@account.AccountType</span>
                </HeaderContent>
                <ChildContent>
                    @if (account.Transactions.Any())
                    {
                        <table class="data-table">
                            <thead>
                                <tr>
                                    <th style="width: 100px;">Date</th>
                                    <th style="width: 100px;">Reference</th>
                                    <th>Description</th>
                                    <th class="text-right" style="width: 100px;">Debit</th>
                                    <th class="text-right" style="width: 100px;">Credit</th>
                                    <th class="text-right" style="width: 120px;">Balance</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="opening-balance">
                                    <td colspan="5">Opening Balance</td>
                                    <td class="text-right font-mono">@account.OpeningBalance.ToString("N2")</td>
                                </tr>
                                @foreach (var trans in account.Transactions)
                                {
                                    <tr>
                                        <td>@trans.Date.ToString("MM/dd/yyyy")</td>
                                        <td class="font-mono">@trans.Reference</td>
                                        <td>@trans.Description</td>
                                        <td class="text-right font-mono">@(trans.Debit > 0 ? trans.Debit.ToString("N2") : "")</td>
                                        <td class="text-right font-mono">@(trans.Credit > 0 ? trans.Credit.ToString("N2") : "")</td>
                                        <td class="text-right font-mono">@trans.Balance.ToString("N2")</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr class="total-row">
                                    <td colspan="3"><strong>Totals / Closing Balance</strong></td>
                                    <td class="text-right font-mono"><strong>@account.TotalDebits.ToString("N2")</strong></td>
                                    <td class="text-right font-mono"><strong>@account.TotalCredits.ToString("N2")</strong></td>
                                    <td class="text-right font-mono"><strong>@account.ClosingBalance.ToString("N2")</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    }
                    else
                    {
                        <div class="empty-state p-4">No transactions in this period</div>
                    }
                </ChildContent>
            </Card>
        }
    };
}

@* Aging Report *@
@{
    RenderFragment RenderAgingReport(bool isReceivables) => __builder =>
    {
        if (agingReport == null) return;
        
        <Card>
            <ChildContent>
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>@(isReceivables ? "Customer" : "Vendor")</th>
                            <th class="text-right">Current</th>
                            <th class="text-right">1-30 Days</th>
                            <th class="text-right">31-60 Days</th>
                            <th class="text-right">61-90 Days</th>
                            <th class="text-right">90+ Days</th>
                            <th class="text-right">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var entity in agingReport.Entities)
                        {
                            <tr>
                                <td><strong>@entity.Name</strong></td>
                                <td class="text-right font-mono">@(entity.Current > 0 ? entity.Current.ToString("N2") : "-")</td>
                                <td class="text-right font-mono">@(entity.Days1To30 > 0 ? entity.Days1To30.ToString("N2") : "-")</td>
                                <td class="text-right font-mono">@(entity.Days31To60 > 0 ? entity.Days31To60.ToString("N2") : "-")</td>
                                <td class="text-right font-mono">@(entity.Days61To90 > 0 ? entity.Days61To90.ToString("N2") : "-")</td>
                                <td class="text-right font-mono text-danger">@(entity.Over90Days > 0 ? entity.Over90Days.ToString("N2") : "-")</td>
                                <td class="text-right font-mono"><strong>@entity.Total.ToString("N2")</strong></td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="total-row">
                            <td><strong>Totals</strong></td>
                            <td class="text-right font-mono"><strong>@agingReport.TotalCurrent.ToString("N2")</strong></td>
                            <td class="text-right font-mono"><strong>@agingReport.Total1To30.ToString("N2")</strong></td>
                            <td class="text-right font-mono"><strong>@agingReport.Total31To60.ToString("N2")</strong></td>
                            <td class="text-right font-mono"><strong>@agingReport.Total61To90.ToString("N2")</strong></td>
                            <td class="text-right font-mono text-danger"><strong>@agingReport.TotalOver90.ToString("N2")</strong></td>
                            <td class="text-right font-mono"><strong>@agingReport.GrandTotal.ToString("N2")</strong></td>
                        </tr>
                    </tfoot>
                </table>
            </ChildContent>
        </Card>
    };
}

