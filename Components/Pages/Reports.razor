else
{
    @* Report Filters *@
    <Card CssClass="mb-4">
        <ChildContent>
            <div class="report-filters">
                @if (ReportType == "balance-sheet" || ReportType == "trial-balance" || 
                     ReportType == "ar-aging" || ReportType == "ap-aging")
                {
                    <div class="filter-group">
                        <label>As of Date</label>
                        <input type="date" class="form-control" @bind="asOfDate" />
                    </div>
                }
                else
                {
                    <div class="filter-group">
                        <label>Start Date</label>
                        <input type="date" class="form-control" @bind="startDate" />
                    </div>
                    <div class="filter-group">
                        <label>End Date</label>
                        <input type="date" class="form-control" @bind="endDate" />
                    </div>
                }
                
                @if (ReportType == "general-ledger")
                {
                    <div class="filter-group">
                        <label>Account (Optional)</label>
                        <select class="form-control" @bind="selectedAccountId">
                            <option value="">All Accounts</option>
                            @foreach (var account in accounts)
                            {
                                <option value="@account.Id">@account.AccountNumber - @account.Name</option>
                            }
                        </select>
                    </div>
                }
                
                <button class="btn btn-primary" @onclick="LoadReportAsync">
                    Run Report
                </button>
            </div>
        </ChildContent>
    </Card>

    @* Report Content *@
    @switch (ReportType)
    {
        case "profit-loss":
            @RenderProfitLoss()
            break;
        case "balance-sheet":
            @RenderBalanceSheet()
            break;
        case "trial-balance":
            @RenderTrialBalance()
            break;
        case "cash-flow":
            @RenderCashFlow()
            break;
        case "general-ledger":
            @RenderGeneralLedger()
            break;
        case "ar-aging":
            @RenderAgingReport(true)
            break;
        case "ap-aging":
            @RenderAgingReport(false)
            break;
        case "sales":
            @RenderSalesReport()
            break;
        case "expenses":
            @RenderExpenseReport()
            break;
        case "tax-summary":
            @RenderTaxSummary()
            break;
    }
}

@* Profit & Loss Report *@
@{
    RenderFragment RenderProfitLoss() => __builder =>
    {
        if (profitLossReport == null) return;
        
        <Card Title="Income" CssClass="mb-4">
            <ChildContent>
                @foreach (var grp in profitLossReport.IncomeSections)
                {
                    <div class="report-group">
                        <div class="group-header">@grp.Name</div>
                        @foreach (var item in grp.Items)
                        {
                            <div class="report-row">
                                <span class="row-label">@item.AccountNumber @item.AccountName</span>
                                <span class="row-value">@item.Amount.ToString("C2")</span>
                            </div>
                        }
                        <div class="report-row subtotal">
                            <span class="row-label">Total @grp.Name</span>
                            <span class="row-value">@grp.Total.ToString("C2")</span>
                        </div>
                    </div>
                }
                <div class="report-row total">
                    <span class="row-label">Total Income</span>
                    <span class="row-value">@profitLossReport.TotalIncome.ToString("C2")</span>
                </div>
            </ChildContent>
        </Card>

        <Card Title="Cost of Goods Sold" CssClass="mb-4">
            <ChildContent>
                @foreach (var grp in profitLossReport.ExpenseSections.Where(s => s.IsCOGS))
                {
                    @foreach (var item in grp.Items)
                    {
                        <div class="report-row">
                            <span class="row-label">@item.AccountNumber @item.AccountName</span>
                            <span class="row-value">@item.Amount.ToString("C2")</span>
                        </div>
                    }
                }
                <div class="report-row total">
                    <span class="row-label">Total COGS</span>
                    <span class="row-value">@profitLossReport.TotalCOGS.ToString("C2")</span>
                </div>
                <div class="report-row highlight">
                    <span class="row-label">Gross Profit</span>
                    <span class="row-value">@profitLossReport.GrossProfit.ToString("C2") (@profitLossReport.GrossMarginPercent.ToString("N1")%)</span>
                </div>
            </ChildContent>
        </Card>

        <Card Title="Operating Expenses" CssClass="mb-4">
            <ChildContent>
                @foreach (var grp in profitLossReport.ExpenseSections.Where(s => !s.IsCOGS))
                {
                    <div class="report-group">
                        <div class="group-header">@grp.Name</div>
                        @foreach (var item in grp.Items)
                        {
                            <div class="report-row">
                                <span class="row-label">@item.AccountNumber @item.AccountName</span>
                                <span class="row-value">@item.Amount.ToString("C2")</span>
                            </div>
                        }
                        <div class="report-row subtotal">
                            <span class="row-label">Total @grp.Name</span>
                            <span class="row-value">@grp.Total.ToString("C2")</span>
                        </div>
                    </div>
                }
                <div class="report-row total">
                    <span class="row-label">Total Operating Expenses</span>
                    <span class="row-value">@profitLossReport.TotalOperatingExpenses.ToString("C2")</span>
                </div>
            </ChildContent>
        </Card>

        <Card CssClass="net-income-card">
            <ChildContent>
                <div class="report-row grand-total @(profitLossReport.NetIncome >= 0 ? "positive" : "negative")">
                    <span class="row-label">Net Income</span>
                    <span class="row-value">@profitLossReport.NetIncome.ToString("C2") (@profitLossReport.NetMarginPercent.ToString("N1")%)</span>
                </div>
            </ChildContent>
        </Card>
    };
}

