        <div class="report-summary mb-4">
            <div class="summary-card">
                <div class="summary-value">@salesReport.TotalSales.ToString("C2")</div>
                <div class="summary-label">Total Sales</div>
            </div>
            <div class="summary-card">
                <div class="summary-value">@salesReport.InvoiceCount</div>
                <div class="summary-label">Invoices</div>
            </div>
            <div class="summary-card">
                <div class="summary-value">@salesReport.CustomerCount</div>
                <div class="summary-label">Customers</div>
            </div>
            <div class="summary-card">
                <div class="summary-value">@salesReport.TotalTax.ToString("C2")</div>
                <div class="summary-label">Tax Collected</div>
            </div>
        </div>

        <div class="report-grid">
            <Card Title="Sales by Customer">
                <ChildContent>
                    @foreach (var item in salesReport.ByCustomer.Take(10))
                    {
                        <div class="report-row">
                            <span class="row-label">@item.CustomerName</span>
                            <span class="row-value">@item.Amount.ToString("C2") (@item.Percentage.ToString("N1")%)</span>
                        </div>
                    }
                </ChildContent>
            </Card>

