@code {
    private bool showImportModal = false;
    private bool isDragOver = false;
    private bool isImporting = false;
    private bool importSuccess = false;
    private string selectedImportType = "";
    private string importMessage = "";
    private List<string> importDetails = new();
    private IBrowserFile? selectedFile;
    
    private void OpenImportModal()
    {
        showImportModal = true;
        ResetImport();
    }
    
    private void CloseImportModal()
    {
        showImportModal = false;
        ResetImport();
    }
    
    private void ResetImport()
    {
        selectedFile = null;
        selectedImportType = "";
        importMessage = "";
        importDetails.Clear();
        isImporting = false;
        importSuccess = false;
    }
    
    private void HandleDragEnter() => isDragOver = true;
    private void HandleDragLeave() => isDragOver = false;
    
    private void HandleFileSelected(InputFileChangeEventArgs e)
    {
        selectedFile = e.File;
        isDragOver = false;
    }
    
    private string FormatFileSize(long bytes)
    {
        if (bytes < 1024) return $"{bytes} B";
        if (bytes < 1024 * 1024) return $"{bytes / 1024.0:F1} KB";
        return $"{bytes / (1024.0 * 1024.0):F1} MB";
    }
    
    private async Task ProcessImport()
    {
        if (selectedFile == null || string.IsNullOrEmpty(selectedImportType))
            return;
            
        isImporting = true;
        StateHasChanged();
        
        try
        {
            // Read file content
            using var stream = selectedFile.OpenReadStream(maxAllowedSize: 10 * 1024 * 1024); // 10MB max
            using var reader = new StreamReader(stream);
            var content = await reader.ReadToEndAsync();
            
            // Parse and validate based on file type
            var extension = Path.GetExtension(selectedFile.Name).ToLowerInvariant();
            
            if (extension == ".csv")
            {
                await ProcessCsvImport(content);
            }
            else if (extension == ".iif")
            {
                await ProcessIifImport(content);
            }
            else
            {
                importSuccess = false;
                importMessage = "Unsupported file format. Please use CSV or IIF files.";
            }
        }
        catch (Exception ex)
        {
            importSuccess = false;
            importMessage = $"Error processing file: {ex.Message}";
        }
        finally
        {
            isImporting = false;
            StateHasChanged();
        }
    }
    
    private async Task ProcessCsvImport(string content)
    {
        QBImportResult result;
        
        switch (selectedImportType.ToLower())
        {
            case "accounts":
                result = await ImportService.ImportAccountsFromCsvAsync(content);
                break;
            case "customers":
                result = await ImportService.ImportCustomersFromCsvAsync(content);
                break;
            case "vendors":
                result = await ImportService.ImportVendorsFromCsvAsync(content);
                break;
            case "products":
                result = await ImportService.ImportProductsFromCsvAsync(content);
                break;
            case "transactions":
            case "invoices":
            case "bills":
                result = await ImportService.ImportTransactionsFromCsvAsync(content);
                break;
            default:
                importSuccess = false;
                importMessage = "Please select an import type.";
                return;
        }
        
        importSuccess = result.Success;
        importMessage = result.Message;
        importDetails.Add($"File: {selectedFile?.Name}");
        importDetails.Add($"Records imported: {result.RecordsImported}");
        if (result.RecordsUpdated > 0)
            importDetails.Add($"Records updated: {result.RecordsUpdated}");
        if (result.RecordsSkipped > 0)
            importDetails.Add($"Records skipped: {result.RecordsSkipped}");
        importDetails.AddRange(result.Details);
        
        if (result.Warnings.Any())
            importDetails.AddRange(result.Warnings.Take(5).Select(w => $"Warning: {w}"));
        if (result.Errors.Any())
            importDetails.AddRange(result.Errors.Take(5).Select(e => $"Error: {e}"));
    }
    
    private async Task ProcessIifImport(string content)
    {
        var result = await ImportService.ImportFromIifAsync(content);
        
        importSuccess = result.Success;
        importMessage = result.Message;
        importDetails.Add($"File: {selectedFile?.Name}");
        importDetails.Add($"Records imported: {result.RecordsImported}");
        if (result.RecordsUpdated > 0)
            importDetails.Add($"Records updated: {result.RecordsUpdated}");
        if (result.RecordsSkipped > 0)
            importDetails.Add($"Records skipped: {result.RecordsSkipped}");
        importDetails.AddRange(result.Details);
        
        if (result.Warnings.Any())
            importDetails.AddRange(result.Warnings.Take(5).Select(w => $"Warning: {w}"));
        if (result.Errors.Any())
            importDetails.AddRange(result.Errors.Take(5).Select(e => $"Error: {e}"));
    }
}
