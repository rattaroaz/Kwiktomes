@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Forms
@using Kwiktomes.Services
@inject IJSRuntime JS
@inject IImportService ImportService

<div class="app-container">
    <NavMenu />
    
    <div class="main-content">
        <header class="top-bar">
            <div class="top-bar-left">
                <div class="search-container">
                    <span class="search-icon">??</span>
                    <input type="text" class="search-input" placeholder="Search transactions, customers, vendors..." />
                </div>
            </div>
            <div class="top-bar-right">
                <button class="top-bar-btn" title="Import QuickBooks Data" @onclick="OpenImportModal">
                    <span>+ New</span>
                </button>
            </div>
        </header>
        
        <main class="page-content">
            @Body
        </main>
    </div>
</div>

@* Import Modal *@
@if (showImportModal)
{
    <div class="import-modal-backdrop" @onclick="CloseImportModal">
        <div class="import-modal-content" @onclick:stopPropagation="true">
            <div class="import-modal-header">
                <h3>?? Import QuickBooks Data</h3>
                <button class="import-modal-close" @onclick="CloseImportModal">�</button>
            </div>
            <div class="import-modal-body">
                @if (string.IsNullOrEmpty(importMessage))
                {
                    <div class="import-info">
                        <p>Import data from QuickBooks export files. Supported formats:</p>
                        <ul>
                            <li><strong>CSV</strong> - Comma Separated Values (Chart of Accounts, Customers, Vendors, Products, Transactions)</li>
                            <li><strong>IIF</strong> - Intuit Interchange Format</li>
                        </ul>
                    </div>
                    
                    <div class="import-type-selector">
                        <label class="form-label">What are you importing?</label>
                        <select class="form-control" @bind="selectedImportType">
                            <option value="">-- Select Import Type --</option>
                            <option value="accounts">Chart of Accounts</option>
                            <option value="customers">Customers</option>
                            <option value="vendors">Vendors</option>
                            <option value="products">Products & Services</option>
                            <option value="invoices">Invoices</option>
                            <option value="bills">Bills</option>
                            <option value="transactions">Bank Transactions</option>
                        </select>
                    </div>
                    
                    <div class="file-upload-area @(isDragOver ? "drag-over" : "")" 
                         @ondragenter="HandleDragEnter" 
                         @ondragleave="HandleDragLeave" 
                         @ondragover:preventDefault="true">
                        <InputFile OnChange="HandleFileSelected" accept=".csv,.iif,.CSV,.IIF" class="file-input" />
                        <div class="file-upload-content">
                            <span class="upload-icon">??</span>
                            <p class="upload-text">
                                @if (selectedFile != null)
                                {
                                    <span class="selected-file">@selectedFile.Name (@FormatFileSize(selectedFile.Size))</span>
                                }
                                else
                                {
                                    <span>Drag & drop your file here, or <strong>click to browse</strong></span>
                                }
                            </p>
                            <p class="upload-hint">Accepts CSV and IIF files up to 10MB</p>
                        </div>
                    </div>
                }
                else
                {
                    <div class="import-result @(importSuccess ? "success" : "error")">
                        <span class="result-icon">@(importSuccess ? "?" : "?")</span>
                        <p>@importMessage</p>
                        @if (importDetails.Any())
                        {
                            <ul class="import-details">
                                @foreach (var detail in importDetails)
                                {
                                    <li>@detail</li>
                                }
                            </ul>
                        }
                    </div>
                }
            </div>
            <div class="import-modal-footer">
                @if (string.IsNullOrEmpty(importMessage))
                {
                    <button class="btn btn-secondary" @onclick="CloseImportModal">Cancel</button>
                    <button class="btn btn-primary" @onclick="ProcessImport" disabled="@(selectedFile == null || string.IsNullOrEmpty(selectedImportType) || isImporting)">
                        @if (isImporting)
                        {
                            <span>Importing...</span>
                        }
                        else
                        {
                            <span>Import Data</span>
                        }
                    </button>
                }
                else
                {
                    <button class="btn btn-secondary" @onclick="ResetImport">Import Another</button>
                    <button class="btn btn-primary" @onclick="CloseImportModal">Done</button>
                }
            </div>
        </div>
    </div>
}

